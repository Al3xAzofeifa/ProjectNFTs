@model ProjectNFTs.Web.ViewModels.ViewModelLogin
@{
    Layout = null;
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login NFT's</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCAjax.styles.css" asp-append-version="true" />
    <!-- Toast-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <!-- SweetAlert-->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Add Bootstrap Icons Support! -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>


<body style="background-color:black;" class="wallpaper">
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Iniciar Sesión</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img src="~/images/LoginImage.jpeg" class="img-fluid rounded-circle" style="width: 150px; height: 150px;" />
                        </div>
                        <form asp-controller="Login" asp-action="LogIn" method="post" asp-antiforgery="true">
                            <div class="form-group mt-4">
                                <label asp-for="User" class="control-label"></label>
                                <input asp-for="User" class="form-control" type="text" autocomplete="true" placeholder="Enter username" />
                                <span asp-validation-for="User" class="text-danger"></span>
                            </div>                            
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" type="password" autocomplete="false" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2 mb-3 mt-2">
                                <button class="btn btn-primary" type="submit" onclick="spinnerEffect()">Iniciar Sesión</button>
                            </div>
                            <div id="loader" class="loadingXXXX" style="width: 1rem; height: 1rem;" role="status"></div>
                            @if (@ViewBag.Message != null)
                            {
                                <div class="form-group">
                                    <div id="message" class="alert alert-danger" role="alert">
                                        @ViewBag.Message
                                    </div>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function spinnerEffect() {
            console.log("spinnerEffect")
            document.getElementById("loader").innerHTML = ""
            document.getElementById("loader").className = "loading";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Ajax unobtrusive-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Toast-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.all.min.js"></script>

</body>

